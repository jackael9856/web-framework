<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:motan="http://api.weibo.com/schema/motan"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://api.weibo.com/schema/motan http://api.weibo.com/schema/motan.xsd">

    <!-- 具体referer配置。使用方通过beanid使用服务接口类 -->
    <motan:referer id="userService" interface="com.uxin.zb.user.service.UserService"
                   basicReferer="motantestClientBasicConfig" check="false" throwException="true"/>

    <motan:referer id="userRelationService" interface="com.uxin.zb.user.service.UserRelationService"
                   basicReferer="motantestClientBasicConfig" check="false"/>

</beans>
