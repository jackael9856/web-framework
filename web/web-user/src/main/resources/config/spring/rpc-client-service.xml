<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:motan="http://api.weibo.com/schema/motan"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
       http://api.weibo.com/schema/motan http://api.weibo.com/schema/motan.xsd">

    <!-- 注册中心配置 使用不同注册中心需要依赖对应的jar包。 -->
    <motan:registry regProtocol="zookeeper" name="registry"
                    address="${motan.registry.address}" connectTimeout="20000"/>

    <!-- motan协议配置 -->
    <motan:protocol default="true" name="motan" haStrategy="failover"
                    loadbalance="roundrobin"/>

    <!-- 通用referer基础配置 -->
    <motan:basicReferer requestTimeout="10000" proxy="javassit"
                        accessLog="false" retries="0" group="motan-ulive-rpc" module="motan-ulive-rpc"
                        application="uliveportal" protocol="motan" registry="registry"
                        id="motantestClientBasicConfig" throwException="true" check="true"/>

    <import resource="rpc-order-client-service.xml"/>
    <import resource="rpc-user-client-service.xml"/>
    <import resource="rpc-room-client-service.xml"/>
    <import resource="rpc-message-client-service.xml"/>
    <import resource="rpc-goods-client-service.xml"/>
    <import resource="rpc-account-client-service.xml"/>
    <import resource="rpc-cms-client-service.xml"/>
    <import resource="rpc-commons-client-service.xml"/>
    <import resource="rpc-search-client-service.xml"/>
</beans>
